<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="son">

    <typeAlias alias="son" type="com.hangzhou.tfchen.bean.Son"/>

    <insert id="insertSon" parameterClass="son">
			INSERT INTO son(id,name,age,person_id)
			values(person_seq.nextval,#name#,#age#,#personId#)
	</insert>


    <select id="selectSonByPersonId" parameterClass="Integer" resultClass="son">
		SELECT id,name,age,person_id as personId
			FROM  son
			WHERE  person_Id = #value#
	</select>
</sqlMap>